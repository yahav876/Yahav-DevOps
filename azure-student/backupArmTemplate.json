{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",


    "parameters": {
        "targetRG": {
            "type": "string",
            "metadata": {
                "description": "Specify the name of the management group."
            },
            "defaultValue": "yahav-test"
        },
        "policyAssignmentMode": {
            "type": "string",
            "metadata": {
                "displayName": "Policy assignment mode",
                "description": "Enforced (default) or disabled."
            },
            "allowedValues": [
                "Default",
                "DoNotEnforce"
            ],
            "defaultValue": "Default"
        },
        "tagValue": {
            "type": "String",
            "metadata": {
                "displayName": "Tag Value",
                "description": "Value of the tag, such as 'production'"
            },
            "defaultValue": "Yahav"
        },
        "policyName": {
            "type": "string",
            "metadata": {
                "displayName": "Policy Name",
                "description": "Name of you policy"
            },
            "defaultValue": "Require a tag on management group"
        }
    },

    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-09-01",
            "name": "location-lock",
            "location": "East US",
            "identity": { "type": "SystemAssigned" },
            "properties": {
                "displayName": "Inherit a tag from the resource group if missing",
                "enforcementMode": "[parameters('policyAssignmentMode')]",
                "scope": "[resourceGroup().id]",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/ea3f2387-9b95-492a-a190-fcdc54f7b070",
                "parameters": {
                    "tagName": {
                        "Value":  "Yahav"   
                    }
                }
            }

        }

    ]
}