{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "targetMG": {
            "type": "string",
            "metadata": {
                "description": "Specify the name of the management group."
            },
            "defaultValue": "m1"
        },
        "tagName": {
            "type": "string",
            "metadata": {
                "displayName": "Tag Name",
                "description": "Name of the tag, such as 'environment'"
            },
            "defaultValue": "Env"
        },
        "policyName": {
            "type": "string",
            "metadata": {
                "displayName": "Policy Name",
                "description": "Name of you policy"
            },
            "defaultValue": "Require a tag on management group"
        },
        "policyDescription": {
            "type": "string",
            "metadata": {
                "displayName": "Description",
                "description": "Name of the tag, such as 'environment'"
            },
            "defaultValue": "tag resources within all management groups"
        }
    },
    "variables": {
        "mgScope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('targetMG'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "[parameters('policyName')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "displayName": "[parameters('policyName')]",
                "policyType": "Custom",
                "description": "[parameters('policyDescription')]",
                "parameters": {
                },
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "location",
                                "equals": "East US"
                            },
                            {
                                "field": "[concat('tags[', parameters('tagName'), ']')]",
                                "exists": "false"
                            }
                        ]
                    },
                    "then": {
                        "effect": "deny"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-06-01",
            "name": "location-lock",
            "dependsOn": [
                "policy2"
            ],
            "properties": {
                "scope": "[variables('mgScope')]",
                "policyDefinitionId": "[concat(variables('mgScope'), '/providers/', 'Microsoft.Authorization/policyDefinitions/', parameters('policyName'))]"
            }
        }

    ]
}